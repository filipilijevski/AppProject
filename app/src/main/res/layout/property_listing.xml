<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/property_listing_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_shape"
    android:orientation="horizontal"
    android:padding="1dp">
    <ImageView
        android:id="@+id/property_image_box"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:background="@drawable/homeicon"
        android:contentDescription="property_image"
        android:scaleType="centerCrop" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:columnCount="1"
        android:padding="2dp"
        android:rowCount="4">
        <TextView
            android:id="@+id/info_window_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginEnd="15dp"
            android:padding="1dp"
            android:text="Address Here"
            android:textSize="11sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/info_window_bedrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginEnd="15dp"
            android:padding="1dp"
            android:text="Bedrooms: 0"
            android:textSize="11sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/info_window_bathrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginEnd="15dp"
            android:padding="1dp"
            android:text="Bathrooms: 0"
            android:textSize="11sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/info_window_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginEnd="15dp"
            android:padding="1dp"
            android:text="Rent: $0"
            android:textSize="11sp"
            android:textStyle="bold" />
    </GridLayout>
</LinearLayout>