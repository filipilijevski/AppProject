<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightgrey"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Property Details"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/firstPropertyImageView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:contentDescription="Selected Image"
            android:scaleType="centerCrop" />
        <EditText
            android:id="@+id/propertyAddressClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Address"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/propertyTypeClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Type"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/propertyNumberOfRoomsClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Number of Rooms"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/propertyNumberOfBathroomsClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Number of Bathrooms"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/propertyNumberOfFloorsClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Number of Floors"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/propertyLaundryInUnitClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Laundry in Unit"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/propertyAreaClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Area in Square Feet"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/propertyNumberOfParkingSpotsClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Number of Parking Spots"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/propertyRentClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Rent per Month ($)"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/propertyLandlordAssignedClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Landlord"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/propertyManagerAssignedClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/lavenderblush"
            android:hint="Property Manager Assigned"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_border"
            android:backgroundTint="@color/lavenderblush"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Utilities Included:"
                android:textSize="13sp"
                android:textStyle="bold" />
            <CheckBox
                android:id="@+id/propertyUtilitiesIncludedHydroClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Hydro"
                android:textSize="12sp" />
            <CheckBox
                android:id="@+id/propertyUtilitiesIncludedHeatClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Heat"
                android:textSize="12sp" />
            <CheckBox
                android:id="@+id/propertyUtilitiesIncludedWaterClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="center"
                android:padding="2dp"
                android:text="Water"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rentPropertyRequestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:alpha="0.9"
                android:background="@drawable/circular_border"
                android:backgroundTint="@color/lavenderblush"
                android:padding="5dp"
                android:text="Request to Rent"
                android:textSize="13sp"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/viewPropertyRequestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:alpha="0.9"
                android:background="@drawable/circular_border"
                android:backgroundTint="@color/lavenderblush"
                android:padding="5dp"
                android:text="Request to View"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>